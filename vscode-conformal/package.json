{
  "name": "conformal",
  "displayName": "Conformal - MATLAB Shape Analyzer",
  "description": "Static shape and dimension analysis for MATLAB",
  "version": "1.1.3",
  "publisher": "EthanDoughty",
  "license": "SEE LICENSE IN LICENSE",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/EthanDoughty/conformal.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "matlab",
        "aliases": ["MATLAB", "matlab"],
        "extensions": [".m"],
        "firstLine": "^\\s*(%|function\\b)",
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "matlab",
        "scopeName": "source.matlab.conformal",
        "path": "./syntaxes/matlab.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "conformal.analyzeFile",
        "title": "Conformal: Analyze Current File"
      },
      {
        "command": "conformal.toggleFixpoint",
        "title": "Conformal: Toggle Fixpoint Mode"
      },
      {
        "command": "conformal.toggleStrict",
        "title": "Conformal: Toggle Strict Mode"
      },
      {
        "command": "conformal.restartServer",
        "title": "Conformal: Restart Server"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Conformal",
      "properties": {
        "conformal.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to Python interpreter (must have pygls installed)"
        },
        "conformal.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to Conformal repository root (containing lsp/ directory). If empty, uses workspace root."
        },
        "conformal.fixpoint": {
          "type": "boolean",
          "default": false,
          "description": "Enable fixed-point loop analysis (iterative convergence)"
        },
        "conformal.strict": {
          "type": "boolean",
          "default": false,
          "description": "Fail on unsupported constructs (W_UNSUPPORTED_* warnings)"
        },
        "conformal.analyzeOnChange": {
          "type": "boolean",
          "default": false,
          "description": "Analyze on file changes (with debounce). If false, only analyzes on save."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
