{
  "name": "conformal",
  "displayName": "Conformal - MATLAB Shape Analyzer",
  "description": "Static shape and dimension analysis for MATLAB. Catch matrix dimension errors before runtime. No MATLAB license required.",
  "version": "1.3.3",
  "keywords": ["matlab", "static analysis", "dimension", "shape", "matrix", "linter"],
  "publisher": "EthanDoughty",
  "license": "SEE LICENSE IN LICENSE",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/EthanDoughty/conformal.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "matlab",
        "aliases": ["MATLAB", "matlab"],
        "extensions": [".m"],
        "firstLine": "^\\s*(%|function\\b)",
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "matlab",
        "scopeName": "source.matlab.conformal",
        "path": "./syntaxes/matlab.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "conformal.analyzeFile",
        "title": "Conformal: Analyze Current File"
      },
      {
        "command": "conformal.toggleFixpoint",
        "title": "Conformal: Toggle Fixpoint Mode"
      },
      {
        "command": "conformal.toggleStrict",
        "title": "Conformal: Toggle Strict Mode"
      },
      {
        "command": "conformal.restartServer",
        "title": "Conformal: Restart Server"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Conformal",
      "properties": {
        "conformal.pythonPath": {
          "type": "string",
          "default": "python3",
          "markdownDescription": "Path to Python interpreter. Leave as default for automatic setup. Set this to use a specific Python installation (disables auto-venv)."
        },
        "conformal.serverPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path to Conformal source root (for development). Leave empty to use the bundled analyzer."
        },
        "conformal.fixpoint": {
          "type": "boolean",
          "default": false,
          "description": "Enable fixed-point loop analysis (iterative convergence)"
        },
        "conformal.strict": {
          "type": "boolean",
          "default": false,
          "description": "Show all warnings including informational and low-confidence diagnostics"
        },
        "conformal.analyzeOnChange": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Analyze as you type (500ms debounce). Conformal analyzes most files in under 100ms, so this is fast enough for real-time feedback."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "node scripts/copy-python-source.js && tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
